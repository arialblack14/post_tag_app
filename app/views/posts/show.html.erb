<div class="col-sm-11 col-xs-12 blog-content">
  <h2 class="text-center">
    <%= @post.title %>
  </h2>
  <h5 class="text-center">
    <%= @post.created_at.strftime('%b %d, %Y') %>
  </h5>
  <div>
    <%= raw @post.body %>
  </div>

  <%= link_to edit_post_path(@post), class: "btn btn-default pull-right post-buttons" do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
  <% end %>
  <%= link_to post_path(@post), method: :delete, data: { confirm: "Are you sure?" },
                                class: "btn btn-default pull-right post-buttons" do %>
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  <% end %>
</div>
