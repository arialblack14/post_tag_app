<% provide(title: 'Posts') %>
<div class="container">
  <h1>All posts</h1>
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= link_to post.title, post_path(post) %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(post.body).truncate(358) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
